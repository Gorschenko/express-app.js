<h1>Редактировать {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
    <label for="title">Название курса</label>
    <span class="helper-text" data-error="Введите название" />
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" value="{{course.price}}" required>
    <label for="price">Цена курса</label>
    <span class="helper-text" data-error="Введите цену" />
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" value="{{course.img}}" required>
    <label for="img">URL изображения</label>
    <span class="helper-text" data-error="Введите URL" />
  </div>
  <input name="id" type="hidden" value="{{course.id}}" required>

  <input type="hidden" name="_csrf" value="{{csurf}}">

  <button type="submit" class="btn btn-primary">Редактировать курс</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}">
  <input type="hidden" name="_csrf" value="{{csurf}}">
  <button class="btn red">Удалить курс</button>
</form>